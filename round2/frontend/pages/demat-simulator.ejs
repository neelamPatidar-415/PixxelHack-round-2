                        const profit = totalValue - this.state.initialBalance;
                        const targetProfit = this.state.initialBalance * 0.02;
                        return profit >= targetProfit ? 'Complete!' : `‚Çπ${(targetProfit - profit).toFixed(0)} to go`;
