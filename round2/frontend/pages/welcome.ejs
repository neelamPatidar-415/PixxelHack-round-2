<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Welcome</title>
  <!-- <link rel="stylesheet" href="/output.css" /> Correct path -->
   <script src="https://cdn.tailwindcss.com"></script>

</head>

<body class="h-screen w-screen bg-white flex flex-col gap-5 items-center justify-center font-sans text-gray-900">
<!-- bg-gradient-to-r from-[#fce375] to-[#2d2d2d] -->
   <!-- here is chooser  -->
    <div id="chooser" class="text-center space-y-6 ">
      <!-- <h1 class="text-4xl font-bold text-gray-800">Welcome to <span class="text-yellow-700">MetaMinds</span></h1> -->
      <h2 class="text-4xl font-bold mb-2">Welcome to <span class="text-yellow-600">FinLit Portal</span></h2>   
      <p class="text-gray-800 text-lg">Choose your path</p>
      <div class="flex justify-center gap-6 mt-6">
        <button onclick="showForm('register')" class="bg-yellow-600 text-white px-6 py-3 rounded-lg hover:bg-yellow-700 transition">Register</button>
        <button onclick="showForm('login')" class="bg-gray-800 text-white px-6 py-3 rounded-lg hover:bg-gray-900 transition">Login</button>
      </div>
    </div> 

     <% if((typeof(error) !=="undefined" ) && error.length> 0) { %>
        <div id="error-box"
            class="z-[999]  absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
            <span class="inline-block mt-1 mb-1 text-white">
                <%= error %>
            </span>
            <div id="progress-bar" class="h-1 bg-white mt-2"></div>
        </div>
        <% } %>
            <% if((typeof(success) !=="undefined" ) && success.length> 0) { %>
                <div id="error-box"
                    class="z-[999]  absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
                    <span class="inline-block mt-1 mb-1 text-white">
                        <%= success %>
                    </span>
                    <div id="progress-bar" class="h-1 bg-white mt-2"></div>
                </div>
                <% } %>

  <div id="form" class="bg-[#fce375] shadow-2xl rounded-xl p-10 w-full max-w-4xl flex flex-col md:flex-row gap-8 hidden ">
    <!-- Register Section -->
    <div id="registerForm" class="flex-1 hidden">
      <h2 class="text-xl font-semibold mb-2">Register</h2>
      <p class="text-sm mb-6 text-gray-700">Flow freely. Create your rhythm.</p>
      <form class="flex flex-col gap-4" method="post" action="/users/register">
        <input type="text" placeholder="Full Name" class="p-3 rounded-md bg-white text-gray-800 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-yellow-600" name="fullname">
        <input type="email" placeholder="Email" class="p-3 rounded-md bg-white text-gray-800 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-yellow-600" name="email">
        <input type="password" placeholder="Password" class="p-3 rounded-md bg-white text-gray-800 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-yellow-600" name="password">
        <button class="bg-yellow-600 text-white py-2 rounded-md hover:bg-yellow-700 transition-all">Create Account</button>
      </form>
    </div>

    <!-- Login Section -->
    <div id="loginForm" class="flex-1 hidden">
      <h2 class="text-xl font-semibold mb-2">Login</h2>
      <p class="text-sm mb-6 text-gray-700">Already flowing? Dive back in.</p>
      <form class="flex flex-col gap-4" method="post" action="/users/login">
        <input type="email" placeholder="Email" class="p-3 rounded-md bg-white text-gray-800 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-yellow-600" name="email">
        <input type="password" placeholder="Password" class="p-3 rounded-md bg-white text-gray-800 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-yellow-600" name="password">
        <button class="bg-gray-900 text-white py-2 rounded-md hover:bg-gray-800 transition-all">Login</button>
      </form>
    </div>
  </div>

  <!-- Script -->
  <script>
    function showForm(type) {
      document.getElementById('form').classList.add('hidden');
      document.getElementById('registerForm').classList.add('hidden');
      document.getElementById('loginForm').classList.add('hidden');

      if (type === 'register') {
        document.getElementById('form').classList.remove('hidden');
        document.getElementById('registerForm').classList.remove('hidden');
      } else if (type === 'login') {
        document.getElementById('form').classList.remove('hidden');
        document.getElementById('loginForm').classList.remove('hidden');
      }
    }
  </script>

  <script src="../js/welcome.js"></script>
</body>


</html>
